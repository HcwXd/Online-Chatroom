<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Slack</title>

  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.js'></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/locale/zh-tw.js'></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    var socket = io();
  </script>

</head>

<body>
  <%- include('components/notification') %>
    <div class="loader"></div>
    <a href="/signout" class="route-btn">Sign Out</a>
    <div class="chatroom-container">
      <div class="channel-container">
        <div class="users-profile">
          <div class="team-name">Web_Class</div>
          <div class="users-name">
            <%= user.username %>
          </div>
        </div>
        <div class="dm-contact-list">
          <div class="header">Direct Message</div>
          <div class="contact-container">

          </div>
        </div>
      </div>
      <div class="content-container">
        <div class="chat-header">
          <div class="chat-name">slackbot</div>
          <div class="chat-status">‚óè | active</div>
        </div>
        <div class="chat-content-list">
        </div>
        <div class="send-box">
          <input class="send-content" type="text" placeholder="message @ ..." />
          <button class="send-button">></button>
        </div>
      </div>
    </div>
    <script src="/javascripts/main.js"></script>


</body>

</html>